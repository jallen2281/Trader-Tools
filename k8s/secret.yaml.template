# Create the actual secret using:
# kubectl create secret generic trader-tools-secret \
#   --from-literal=SECRET_KEY='your-secret-key-here' \
#   --from-literal=DATABASE_URL='sqlite:////data/financial_analysis.db' \
#   --from-literal=GOOGLE_CLIENT_ID='your-google-client-id' \
#   --from-literal=GOOGLE_CLIENT_SECRET='your-google-client-secret' \
#   --from-literal=ALPHA_VANTAGE_API_KEY='your-alpha-vantage-key' \
#   --from-literal=NEWS_API_KEY='your-news-api-key' \
#   --from-literal=QUANDL_API_KEY='your-quandl-key' \
#   --namespace trader-tools

# Or use this template (remember to base64 encode values):
apiVersion: v1
kind: Secret
metadata:
  name: trader-tools-secret
  namespace: trader-tools
type: Opaque
data:
  # All values must be base64 encoded
  # Example: echo -n 'your-secret-key' | base64
  SECRET_KEY: ""  # REQUIRED: Flask secret key
  DATABASE_URL: ""  # Default: sqlite:////data/financial_analysis.db
  GOOGLE_CLIENT_ID: ""  # REQUIRED for OAuth
  GOOGLE_CLIENT_SECRET: ""  # REQUIRED for OAuth
  ALPHA_VANTAGE_API_KEY: ""  # Optional
  NEWS_API_KEY: ""  # Optional
  QUANDL_API_KEY: ""  # Optional
  OLLAMA_BASE_URL: ""  # Default: http://localhost:11434
